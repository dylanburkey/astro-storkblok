---
import { storyblokEditable } from '@storyblok/astro'

const { blok } = Astro.props
---

<section {...storyblokEditable(blok)}>
  <h2>{blok.title}</h2>
  <div class="blog-posts-grid">
    {blok.posts?.map((post: any) => (
      <div class="blog-post-preview">
        <h3>{post.title}</h3>
        <p>{post.excerpt}</p>
      </div>
    ))}
  </div>
</section> 